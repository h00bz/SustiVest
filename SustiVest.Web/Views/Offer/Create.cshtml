        </div> *@

        <div class="mt-3">
            <label asp-for="Amount" class="form-label">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Tenor" class="form-label">Tenor</label>
            <input asp-for="Tenor" class="form-control" />
            <span asp-validation-for="Tenor" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Payback" class="form-label">Payback</label>
            <input asp-for="Payback" class="form-control" />
            <span asp-validation-for="Payback" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Linens" class="form-label">Linens</label>
            <input asp-for="Linens" class="form-control" />
            <span asp-validation-for="Linens" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Undertakings" class="form-label">Undertakings</label>
            <input asp-for="Undertakings" class="form-control" />
            <span asp-validation-for="Undertakings" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Covenants" class="form-label">Covenants</label>
            <input asp-for="Covenants" class="form-control" />
            <span asp-validation-for="Covenants" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="ROR" class="form-label">ROR</label>
            <input asp-for="ROR" class="form-control" />
            <span asp-validation-for="ROR" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FacilityType" class="form-label">Facility Type</label>
            <input asp-for="FacilityType" class="form-control" />
            <span asp-validation-for="FacilityType" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="UtilizationMechanism" class="form-label">Utilization Mechanism</label>
            <input asp-for="UtilizationMechanism" class="form-control" />
            <span asp-validation-for="UtilizationMechanism" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" name="submit" class="btn btn-primary" aria-label="Save">Save</button>
            <a class="btn btn-secondary" asp-action="Index" aria-label="Cancel">Cancel</a>
        </div>

    </form>
</div>

