<div class="card rounded shadow p-4">
    <h3>Create Offer</h3>
    <form asp-action="Create" asp-route-crNo="@Model.CRNo">
       
        <div class="mt-3">
            <label asp-for="RequestNo" class="form-label">Request No</label>
            <input asp-for="RequestNo" class="form-control" />
            <span asp-validation-for="RequestNo" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CRNo" class="form-label">CR No</label>
            <input asp-for="CRNo" class="form-control" />
            <span asp-validation-for="CRNo" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* <div class="mt-3">
            <label asp-for="Company.CompanyName" class="form-label">Company Name</label>
