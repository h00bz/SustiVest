@model Company

<div class="d-flex align-items-center justify-content-between">
    <h4>Finance Requests</h4>

</div>

<table class="table table-sm mt-2">
    <thead>
        <tr>
            <th>Request No.</th>
            <th>Submitted On</th>
            <th>Purpose</th>
            <th>Amount</th>
            <th>Tenor</th>
            <th>Facility</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.FinanceRequests.Count == 0)
        {
            <tr>
                <td colspan="4">No Requests...</td>
            </tr>
        }
        else
        {

            @foreach (var f in Model.FinanceRequests)
            {
                <tr>
                    <td>@f.RequestNo</td>
                    <td>@f.DateOfRequest</td>
                    <td>@f.Purpose</td>
                    <td>@f.Amount</td>
                    <td>@f.Tenor</td>
                    <td>@f.FacilityType</td>
                    <td>@f.Status</td>


                    <td class="text-end">
                    <td>
                        <a asp-controller="FinanceRequest" asp-action="Details" asp-route-requestNo="@f.RequestNo">
                            <i class="bi bi-display-fill me-2" title="view request" arial-label="view request"></i>
                        </a>
                        <a asp-controller="FinanceRequest" asp-action="RequestEdit" asp-route-requestNo="@f.RequestNo">
                            <i class="bi bi-pencil-fill me-2" title="edit company" aria-label="edit company"></i>
                        </a>
                    </td>
                    </td>
                </tr>

            }
        }
    </tbody>
</table>