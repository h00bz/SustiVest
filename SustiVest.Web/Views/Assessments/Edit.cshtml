@model Assessments 

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ($"/assessments/index","Assessments"),
    ("","Edit Assessment")
}) />

<div class="card rounded shadow p-4">
    <h3>Edit Assessment</h3>
    <form asp-action="Edit" asp-route-assessmentNo="@Model.AssessmentNo">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="AssessmentNo"/>
        <input type="hidden" asp-for="RequestNo" />
        <input type="hidden" asp-for="AnalystNo" />

        <div class="mt-3">
            <label asp-for="Sales" class="form-label">Sales</label>
            <input asp-for="Sales" class="form-control" />
            <span asp-validation-for="Sales" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="EBITDA" class="form-label">EBITDA</label>
            <input asp-for="EBITDA" class="form-control" />
            <span asp-validation-for="EBITDA" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="DSR" class="form-label">DSR</label>
            <input asp-for="DSR" class="form-control" />
            <span asp-validation-for="DSR" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CCC" class="form-label">CCC</label>
            <input asp-for="CCC" class="form-control" />
            <span asp-validation-for="CCC" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="RiskRating" class="form-label">Risk Rating</label>
            <input asp-for="RiskRating" class="form-control" />
            <span asp-validation-for="RiskRating" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="MarketPosition" class="form-label">Market Position</label>
            <input asp-for="MarketPosition" class="form-control" />
            <span asp-validation-for="MarketPosition" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="RepaymentStatus" class="form-label">Repayment Status</label>
            <input asp-for="RepaymentStatus" class="form-control" />
            <span asp-validation-for="RepaymentStatus" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="FinancialLeverage" class="form-label">Financial Leverage</label>
            <input asp-for="FinancialLeverage" class="form-control" />
            <span asp-validation-for="FinancialLeverage" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="WorkingCapital" class="form-label">Working Capital</label>
            <input asp-for="WorkingCapital" class="form-control" />
            <span asp-validation-for="WorkingCapital" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="OperatingAssets" class="form-label">Operating Assets</label>
            <input asp-for="OperatingAssets" class="form-control" />
            <span asp-validation-for="OperatingAssets" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="CRNo" class="form-label">CR No</label>
            <input asp-for="CRNo" class="form-control" readonly />
            <span asp-validation-for="CRNo" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="TotalAssets" class="form-label">Total Assets</label>
            <input asp-for="TotalAssets" class="form-control" />
            <span asp-validation-for="TotalAssets" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="NetEquity" class="form-label">Net Equity</label>
            <input asp-for="NetEquity" class="form-control" />
            <span asp-validation-for="NetEquity" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" name="submit" class="btn btn-primary" aria-label="save">Save</button>
            <a class="btn btn-secondary" asp-action="Index" aria-label="cancel">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
